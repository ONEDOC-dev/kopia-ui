{
  "appId": "com.onedoc.onecloud",
  "productName": "oneCLOUD",
  "directories": {
    "output": "release"
  },
  "files": [
    "dist/**/*",
    "resources/**/*",
    "package.json"
  ],
  "extraResources": [
    {
      "from": "resources",
      "to": "resources",
      "filter": [
        "**/*"
      ]
    }
  ],
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "artifactName": "${productName}-${version}.exe",
    "deleteAppDataOnUninstall": true
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      }
    ]
  },
  "mac": {
    "hardenedRuntime": false,
    "gatekeeperAssess": false,
    "category": "public.app-category.utilities",
    "target": [
      {
        "target": "dmg",
        "arch": [
          "universal"
        ]
      }
    ]
  }
}